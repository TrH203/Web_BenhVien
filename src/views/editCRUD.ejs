<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-5">
        <h1>Edit user's profile</h1>
        <form class="row g-3" action="/update-crud?id=<%=data.id%>" method="POST">
            <div class="col-md-6">
                <label for="input" class="form-label">First Name</label>
                <input type="text" class="form-control" id="first-name" name="firstName" value="<%=data.firstName%>">
            </div>
            <div class="col-md-6">
                <label for="input" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="last-name" name="lastName" value="<%=data.lastName%>">
            </div>
            <div class="col-md-12">
                <label for="inputEmai4" class="form-label">Email</label>
                <input type="email" class="form-control" id="inputEmail4" name="email" value="<%=data.email%>">
            </div>
            <div class="col-md-12">
                <label for="inputAddress" class="form-label">Address</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="1234 Street" name="address"
                    value="<%= data.address %>">
            </div>
            <div class="col-md-6">
                <label for="inputCity" class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="inputPhoneNumber" placeholder="0331234567"
                    name="phoneNumber" value="<%= data.phoneNumber %>">
            </div>
            <div class="col-md-3">
                <label for="inputState" class="form-label">Sex</label>
                <select id="inputState1" class="form-select" name="gender">
                    <% if (data.gender===1) {%>
                        <option value="1">Male</option>
                        <option value="0">Female</option>
                        <%}else{%>
                            <option value="0">Female</option>
                            <option value="1">Male</option>
                            <% } %>
                </select>
            </div>
            <div class="col-md-3">
                <label for="inputState" class="form-label">Role</label>
                <select id="inputState2" class="form-select" name="roleId">
                    <% if (data.roleId==='0' ) {%>
                        <option value="0">Admin</option>
                        <option value="1">Doctor</option>
                        <%} else{%>
                            <option value="1">Doctor</option>
                            <option value="0">Admin</option>
                            <% } %>
                </select>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>
            <div class="col-md-6">
                <button type="button" class="btn btn-danger">Exit</button>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>